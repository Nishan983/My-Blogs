<h2>Sign In</h2>

<% flash.each do |type, msg| %>
  <div class="alert alert-info">
    <%= msg %>
  </div>
<% end %>

<%= form_with url:log_in_path do |f| %>
<div class = "mb-3">
<%= f.label :email, "Email:" %>
<%= f.text_field :email, placeholder: "admin@example.com" %>
</div>

<div class = "mb-3">
<%= f.label :password, "Password:" %>
<%= f.password_field :password %>
</div>

<%= f.submit "Sign In" %>
<% end %>
<br>
<br>
<p>If you donot have account yet.<p>
<%= link_to "Sign Up",  user_index_path %>
  