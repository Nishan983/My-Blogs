<h2>Edit Blog</h2>

<%= form_with( model: @blog, url:update_blog_path) do |f| %>
<% if @blog.errors.any? %>
    <ul>
    <% @blog.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>

  <div class="mb-3">
    <%= f.label :title %><br>
    <%= f.text_field :title, class:"form-control" %>
  </div>
   <div class="mb-3">
    <%= f.label :status %><br>
    <%# f.text_field :status, class:"form-control" %>
  <%= f.select :status,Blog.statuses.keys, class:"form-control" %>

  </div>

  <div class="mb-3">
    <%= f.label :body  %><br>
    <%= f.text_area :body, class:"form-control"%>
  </div>

  <div class="mb-3">
  <%= f.label :images  %><br>
  <%= f.file_field :images,multiple:true, class:"form-control"%>
</div>

  <div>
    <%= f.submit %>
  </div>

  <%# @users %>
 
  <% end %>
