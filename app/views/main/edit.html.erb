<h2>Edit Blog</h2>

<%= form_with( model: @blog, url:update_blog_path) do |f| %>
  <div class="mb-3">
    <%= f.label :title %><br>
    <%= f.text_field :title, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :body  %><br>
    <%= f.text_area :body, class:"form-control"%>
  </div>

  <div>
    <%= f.submit %>
  </div>

  
      
  <% end %>
    
<% end %>